# --------------------------------------------------------------------------
# --- WCAML API                                                          ---
# --------------------------------------------------------------------------

include ../design/MakeWcaml
include ../design/MakePort

# --------------------------------------------------------------------------

WCAML_SRC= main
WCAML_CMI=$(addsuffix .cmi, $(WCAML_LIB) $(WCAML_SRC))
WCAML_CMX=$(addsuffix .cmo, $(WCAML_LIB) $(WCAML_SRC))

# --------------------------------------------------------------------------

.PHONY: all opt

all:
	$(MAKE) depend
	$(MAKE) opt doc

opt: port $(WCAML_CMI) $(WCAML_CMX)

# --------------------------------------------------------------------------
include ../design/MakeOcaml
